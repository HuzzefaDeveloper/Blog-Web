<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&family=Rubik+Doodle+Triangles&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="/readmor/style.css" />
    <title>Home</title>
  </head>
  <body>
    <main>
      <header>
        <div class="heding">
          <h1>Home Page</h1>
        </div>
        <div class="form">
          <form action="/add" method="post">
            <button class="btn btn-primary" type="submit">Add</button>
          </form>
          <form action="/about" method="post">
            <button class="btn btn-primary" type="submit">About</button>
          </form>
        </div>
      </header>
      <% if (addedData) {%>
        <% addedData.forEach((data, no ) => {%>

      <h1>
        <% if (data.tital) { %> 
          <%= no + 1 %>: <%= data.tital %> 
          <% } else { %>
        <%= no + 1 %>: No Tital 
        <% } %>
      </h1>
      <ul>
        <% if (data.add) {%>
        <li>
          <%= data.add.substr(0, 100)%> 
          <% if (data.add.length > 100) {%>

          ...<a href="/readMore/<%- data.idNo %> " class="atag">read more</a>

          <%}%>
        </li>

        <% } %>
      </ul>
      <% })} %>
    </main>
  </body>
</html>
